/var/log/nmap/nmap.log {
	weekly
	missingok
	rotate 7
#	postrotate
#		/etc/init.d/smbd reload > /dev/null
#	endscript
	compress
	notifempty
	maxage 180
}

/var/log/nmap/nmap-*log {
	weekly
	missingok
	rotate 7
	compress
	dateext
	notifempty
	maxage 60
}

/var/log/nmap/nmap_*log {
	weekly
	missingok
	rotate 7
	compress
	dateext
	notifempty
	maxage 60
}

/var/log/nmap/nmap-*.txt {
        weekly
        missingok
        rotate 7
        postrotate
            /usr/bin/find /opt/log/nmap/ -name "nmap-*.txt" -type f -mtime +60 -exec rm {} \;
        endscript
        compress
        notifempty
	maxage 60
}
